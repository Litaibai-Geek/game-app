<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.api.web.dao.game.GameTypeDAO">

    <resultMap id="gameTypeMap" type="com.game.api.web.entity.game.GameType">
        <id property="id" column="id"/>
        <result property="typeName" column="type_name"/>
        <result property="sortNum" column="sort_num"/>
        <result property="themeId" column="theme_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <!--通过ID查询单个-->
    <select id="findById" resultMap="gameTypeMap">
        SELECT id,type_name,sort_num,theme_id,create_time,update_time,status FROM game_type
        WHERE id=#{id}
    </select>

    <!--分页查询-->
    <select id="findByPage" resultMap="gameTypeMap">
        SELECT id,type_name,sort_num,theme_id,create_time,update_time,status FROM game_type
    </select>

    <!--新增-->
    <insert id="insert">
        INSERT INTO game_type(id,type_name,sort_num,theme_id,create_time,update_time,status)
        VALUES (#{id},#{typeName},#{sortNum},#{themeId},#{createTime},#{updateTime},#{status})
    </insert>

    <!--修改-->
    <update id="update">
        UPDATE game_type SET type_name=#{typeName},sort_num=#{sortNum},theme_id=#{themeId},create_time=#{createTime},update_time=#{updateTime},status=#{status}
        WHERE id=#{id}
    </update>

    <!--通过ID删除单个-->
    <delete id="deleteById">
        DELETE FROM game_type
        WHERE id=#{id}
    </delete>

</mapper>
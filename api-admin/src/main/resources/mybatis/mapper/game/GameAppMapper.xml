<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.api.web.dao.game.GameAppDAO">

    <resultMap id="gameAppMap" type="com.game.api.web.entity.game.GameApp">
        <id property="id" column="id"/>
        <result property="appName" column="app_name"/>
        <result property="appImg" column="app_img"/>
        <result property="path" column="path"/>
        <result property="details" column="details"/>
        <result property="platform" column="platform"/>
        <result property="typeId" column="type_id"/>
        <result property="size" column="size"/>
        <result property="version" column="version"/>
        <result property="score" column="score"/>
        <result property="language" column="language"/>
        <result property="downNum" column="down_num"/>
        <result property="releaseDate" column="release_date"/>
        <result property="androidUrl" column="android_url"/>
        <result property="iosUrl" column="ios_url"/>
        <result property="qrUrl" column="qr_url"/>
        <result property="sourceName" column="source_name"/>
        <result property="sourceUrl" column="source_url"/>
        <result property="readNum" column="read_num"/>
        <result property="clickNum" column="click_num"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <!--通过ID查询单个-->
    <select id="findById" resultMap="gameAppMap">
        SELECT id,app_name,app_img,path,details,platform,type_id,size,version,score,language,down_num,release_date,android_url,ios_url,qr_url,source_name,source_url,read_num,click_num,create_time,update_time,status FROM game_app
        WHERE id=#{id}
    </select>

    <!--分页查询-->
    <select id="findByPage" resultMap="gameAppMap">
        SELECT id,app_name,app_img,path,details,platform,type_id,size,version,score,language,down_num,release_date,android_url,ios_url,qr_url,source_name,source_url,read_num,click_num,create_time,update_time,status FROM game_app
    </select>

    <!--新增-->
    <insert id="insert">
        INSERT INTO game_app(id,app_name,app_img,path,details,platform,type_id,size,version,score,language,down_num,release_date,android_url,ios_url,qr_url,source_name,source_url,read_num,click_num,create_time,update_time,status)
        VALUES (#{id},#{appName},#{appImg},#{path},#{details},#{platform},#{typeId},#{size},#{version},#{score},#{language},#{downNum},#{releaseDate},#{androidUrl},#{iosUrl},#{qrUrl},#{sourceName},#{sourceUrl},#{readNum},#{clickNum},#{createDate},#{updateTime},#{status})
    </insert>

    <!--修改-->
    <update id="update">
        UPDATE game_app SET app_name=#{appName},app_img=#{appImg},path=#{path},details=#{details},platform=#{platform},type_id=#{typeId},size=#{size},version=#{version},score=#{score},language=#{language},down_num=#{downNum},release_date=#{releaseDate},android_url=#{androidUrl},ios_url=#{iosUrl},qr_url=#{qrUrl},source_name=#{sourceName},source_url=#{sourceUrl},read_num=#{readNum},click_num=#{clickNum},create_time=#{createDate},update_time=#{updateTime},status=#{status}
        WHERE id=#{id}
    </update>

    <!--通过ID删除单个-->
    <delete id="deleteById">
        DELETE FROM game_app
        WHERE id=#{id}
    </delete>

</mapper>
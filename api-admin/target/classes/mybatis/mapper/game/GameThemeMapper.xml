<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.api.web.dao.game.GameThemeDAO">

    <resultMap id="gameThemeMap" type="com.game.api.web.entity.game.GameTheme">
        <id property="id" column="id"/>
        <result property="themeName" column="theme_name"/>
        <result property="path" column="path"/>
        <result property="sortNum" column="sort_num"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <!--通过ID查询单个-->
    <select id="findById" resultMap="gameThemeMap">
        SELECT id,theme_name,path,sort_num,create_time,update_time,status FROM game_theme
        WHERE id=#{id}
    </select>

    <!--分页查询-->
    <select id="findByPage" resultMap="gameThemeMap">
        SELECT id,theme_name,path,sort_num,create_time,update_time,status FROM game_theme
    </select>

    <!--新增-->
    <insert id="insert">
        INSERT INTO game_theme(id,theme_name,path,sort_num,create_time,update_time,status)
        VALUES (#{id},#{themeName},#{path},#{sortNum},#{createTime},#{updateTime},#{status})
    </insert>

    <!--修改-->
    <update id="update">
        UPDATE game_theme SET theme_name=#{themeName},path=#{path},sort_num=#{sortNum},create_time=#{createTime},update_time=#{updateTime},status=#{status}
        WHERE id=#{id}
    </update>

    <!--通过ID删除单个-->
    <delete id="deleteById">
        DELETE FROM game_theme
        WHERE id=#{id}
    </delete>

</mapper>